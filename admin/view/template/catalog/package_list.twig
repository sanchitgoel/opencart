{{ header }}{{ column_left }}
<div id="content" class="package">
    <div class="page-header">
        <div class="container-fluid">
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">{% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i
                        class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <table class="table table-responsive table-package">
            <thead>
            <tr>
                <td></td>
                <td>SITE ARCHITECTURE</td>
                <td>MARKETING</td>
                <td>HOSTING</td>
                <td>SUPPORT</td>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>Basic</td>
                <td><input type="checkbox"/></td>
                <td><input type="checkbox"/></td>
                <td><input type="checkbox"/></td>
                <td><input type="checkbox"/></td>
            </tr>
            <tr>
                <td>Advanced</td>
                <td><input type="checkbox"/></td>
                <td><input type="checkbox"/></td>
                <td><input type="checkbox"/></td>
                <td><input type="checkbox"/></td>
            </tr>
            <tr>
                <td>Premium</td>
                <td><input type="checkbox"/></td>
                <td><input type="checkbox"/></td>
                <td><input type="checkbox"/></td>
                <td><input type="checkbox"/></td>
            </tr>
            <tr>
                <td>Custom</td>
                <td><input type="checkbox"/></td>
                <td><input type="checkbox"/></td>
                <td><input type="checkbox"/></td>
                <td><input type="checkbox"/></td>
            </tr>
            </tbody>
        </table>

        <div class="clearfix">
            <p class="col-xs-12 text-right"><a class="btn btn-green">UPDATE</a></p>
        </div>

        <div class="clearfix">
            <h2>INTEGRATIONS</h2>
            <div class="col-xs-12">
                <div class="col-xs-12 col-md-8 noPadding">
                    <span>
                        <input type="checkbox" id="axix" name="axix"/>
                        <label for="axix">AXIX</label>
                    </span>
                    <span>
                        <input type="checkbox" id="broker" name="broker"/>
                        <label for="broker">GunBroker</label>
                    </span>
                    <span>
                        <input type="checkbox" id="deal" name="deal"/>
                        <label for="deal">Gun.Deals</label>
                    </span>
                </div>
                <div class="col-xs-12 col-md-4 text-right"><a class="btn btn-green">UPDATE</a></div>
            </div>
        </div>

        <div class="clearfix">
            <h2>EXTENSIONS</h2>
            <div class="col-xs-12">
                <div class="col-xs-12 col-md-8 noPadding">
                    <input type="checkbox" id="range" name="range"/>
                    <label for="range">Range Management</label>
                </div>
                <div class="col-xs-12 col-md-4 text-right"><a class="btn btn-green">UPDATE</a></div>
            </div>
        </div>

        <div>

        </div>
    </div>

</div>

{{ footer }}
